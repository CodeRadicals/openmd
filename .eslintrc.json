{
  "root": true,
  "ignorePatterns": ["!**/*"],
  "plugins": ["unicorn", "@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts"],
      "extends": ["plugin:unicorn/recommended", "plugin:@nrwl/nx/typescript"],
      "rules": {
        "no-restricted-syntax": "off",
        "@typescript-eslint/no-explicit-any": "error",
        "@typescript-eslint/ban-types": "error",
        "unicorn/prevent-abbreviations": [
          "error",
          {
            "allowList": {
              "Dev": true,
              "dev": true,
              "Env": true,
              "env": true,
              "req": true,
              "res": true
            }
          }
        ]
      }
    }
  ]
}
